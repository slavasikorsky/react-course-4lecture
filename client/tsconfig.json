{
	"compilerOptions": {
		"module": "commonjs",
		"skipLibCheck": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"jsx": "react-jsx",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"sourceMap": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
